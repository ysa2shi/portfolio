---
import { fetchZennArticles } from "../../utils/fetchZennFeed"
import BaseLayout from "../../layouts/BaseLayout.astro"
import { marketingConfig } from "../../config/marketing"
import PageHeader from "../../components/PageHeader.astro"
import ArticleCard from "../../components/ArticleCard.astro"
const articles = await fetchZennArticles()
---

<BaseLayout pageTitle={marketingConfig.pageInfo.articles.title}>
  <PageHeader
    title={marketingConfig.pageInfo.articles.title}
    description="Thoughts, insights, and tutorials on web development, design, and technology."
  />

  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          articles.map((article) => (
            <ArticleCard
              title={article.title}
              description={article.description}
              publishDate={article.pubDate}
              link={article.link}
            />
          ))
        }
      </div>
    </div>
  </section>
</BaseLayout>
