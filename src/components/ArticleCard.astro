---
import { formatDateJST } from "../utils/formatDate"

export interface Props {
  title: string
  description: string
  publishDate: string
  link: string
}

const { title, description, publishDate, link } = Astro.props
---

<article
  class="group bg-white rounded-lg overflow-hidden border border-neutral-200 shadow-sm hover:shadow-md transition-all duration-300 flex flex-col h-full"
>
  <div class="p-6 flex-grow flex flex-col">
    <a
      href={link}
      target="_blank"
      rel="noopener noreferrer"
      class="block mb-auto"
    >
      <h3
        class="text-xl font-semibold mb-2 text-neutral-900 group-hover:text-primary-500 transition-colors"
      >
        {title}
      </h3>
      <p class="text-neutral-600 mb-4 line-clamp-3">{description}</p>
    </a>

    <div class="flex items-center mt-4">
      <p class="text-sm text-neutral-500">{formatDateJST(publishDate)}</p>
    </div>
  </div>
</article>
